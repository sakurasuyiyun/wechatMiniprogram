.form {
    padding: 0 32rpx;
    margin-top: 20rpx;
}

.form-content {
    box-sizing: border-box;
    padding: 16rpx 0;
}

.form-item {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ccc;
    /*border-radius: 100rpx;*/
    height: 100rpx;
    line-height: 100rpx;
    margin-bottom: 30rpx;
    color: #666;
    overflow: hidden;
}

.form-item-label {
    width: 25%;
    text-align: center;
    position: relative;
    font-size: 28rpx;
}

.form-item-label::after {
    content: '';
    display: block;
    width: 2rpx;
    position: absolute;
    height: 30rpx;
    background-color: #ccc;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.placeholder {
    font-size: 24rpx;
}

.form-item-content input {
    padding-left: 20rpx;
}

.btn-item {
    border-radius: 100rpx;
}

.btn {
    width: 100%;
    text-align: center;
    /*background-image: linear-gradient(*/
    /*        90deg,*/
    /*        #f10000,*/
    /*        #ff2000 73%,*/
    /*        #ff4f18*/
    /*);*/
    background-image: linear-gradient(
            90deg,
            #fab3b3,
            #ffbcb3 73%,
            #ffcaba
    );
    color: white;
}

.tips {
    font-size: 24rpx;
}

.important {
    color: #4a90e2;
}

.wx-login{
    margin-top: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}

.wx-icon{
    width: 96rpx;
    height: 96rpx;
    margin-bottom: 10rpx;
}

.wx-icon image{
    width: 100%;
    display: block;
}

.loading{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
}

.loading-item{
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.text{
    color: white;
}


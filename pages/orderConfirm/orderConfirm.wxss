page {
    background-color: #f2f2f2;
}

.header {
    background-image: linear-gradient(180deg, #629de1, #d3e0f0);
}

.title {
    text-align: center;
    color: white;
    padding: 20rpx 0;
}

.tips {
    padding: 16rpx 32rpx;
}

.address{
    padding: 16rpx 32rpx;
}

.address-card{
    position: relative;
    font-size: 24rpx;
    color: #999;
    background-color: #fff;
    padding: 16rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.more{
    position: absolute;
    top: 50%;
    right: 20rpx;
    transform: translateY(-50%);
    font-size: 32rpx;
}

.user-address{
    font-weight: 500;
    color: black;
    font-size: 40rpx;
}

.user-info{
    margin-top: 10rpx;
}

.user-info text:nth-child(n+2){
    margin-left: 30rpx;
}

.arrive-time{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    font-size: 28rpx;
    position: relative;
}

.arrive-content{
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx;
}

.arrive-time-text{
    font-weight: bold;
    color: #69a1e2;
    margin-right: 20rpx;
}

.arrive-more{
    position: absolute;
    top: 50%;
    right: 20rpx;
    font-size: 34rpx;
    color: #999;
    transform: translateY(-50%);
}

.arrive-title{
    font-weight: bold;
    margin-left: 10rpx;
}

.products{
    padding: 16rpx 32rpx;
}

.products-list{
    background-color: #fff;
    border-radius: 20rpx;
    margin-bottom: 100rpx;
}

.products-item{
    color: #999;
    font-size: 26rpx;
    padding: 20rpx 10rpx;
}

.shop-title{
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 10rpx;
}

.products-info{
    margin-top: 10rpx;
    display: flex;
}

.products-img{
    width: 150rpx;
    height: 150rpx;
    flex-shrink: 0;
}

.products-img image{
    width: 100%;
    display: block;
}

.products-desc{
    width: 100%;
    margin-left: 20rpx;
    padding: 0 10rpx;
}

.product-title{
    font-weight: bold;
    color: black;
    font-size: 28rpx;
}

.product-desc{
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    text-overflow: ellipsis;
    font-size: 24rpx;
    line-height: 1.5;
    overflow: hidden;
    white-space: normal;
    word-break: break-all;
    letter-spacing: .02em;
}

.product-price{
    display: flex;
    justify-content: space-between;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 10rpx;
}

.product-price-text{
    color: black;
    font-weight: bold;
    font-size: 32rpx;
}

.order-info{
    margin-top: 40rpx;
    padding: 0 10rpx;
}

.order-info-item{
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: black;
    padding: 5rpx 0;
}

.order-info-title{
    color: black;
    font-size: 28rpx;
    font-weight: 400;
}

.order-info-right{
    font-weight: 700;
    font-size: 32rpx;
}

.button-class{
    background-color: dodgerblue !important;
    border: 2rpx solid dodgerblue !important;
}

.price-class{
    color: black !important;
}

.active{
    color: #e4393c;
}

.bottom {
    display: flex;
}

.pink {
    background: #ff7967;
    border-radius: 1px 1px 0 0;
    flex: 1;
    height: 4px;
    transform: skew(-30deg);
    width: 22px;
}

.blue {
    background: #7ca8ff;
    border-radius: 1px 1px 0 0;
    flex: 1;
    height: 4px;
    transform: skew(-30deg);
    width: 22px;
}

.pink:not(:first-child) {
    margin-left: 10px;
}

.blue:not(:first-child) {
    margin-left: 10px;
}

.pwd{
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 60rpx;
}

.input{
    width: 40%;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
    border: 1px solid black;
    margin-top: 30rpx;
    border-radius: 20rpx;
}

.pwd-input{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}
page{
    background-color: #f2f2f2;
}

.header {
    /*background-color: dodgerblue;*/
    color: white;
}

.position {
    display: flex;
    padding: 0 32rpx;
    height: 150rpx;
    line-height: 100rpx;
    background-color: dodgerblue;
    /*border: 1px solid black;*/
}

.add {
    margin-left: 20rpx;
    font-size: 26rpx;
}

.xs {
    margin-left: auto;
}

.content {
    border-radius: 50rpx 50rpx 0 0;
    background-color: #fff;
    overflow: hidden;
    font-size: 24rpx;
    transform: translateY(-45rpx);
}

.item {
    display: flex;
    flex-wrap: wrap;
    text-align: center;
    margin-top: 30rpx;
}

.item-list {
    width: 20%;
    margin-bottom: 30rpx;
}

.item-list image {
    width: 100rpx;
    display: block;
    margin-left: 50%;
    transform: translateX(-50%);
    margin-bottom: 10rpx;
}

.shop-content {
    padding: 0 28rpx;
    overflow: hidden;
}

.shop-list {
    margin-bottom: 80rpx;
}

.shop-item {
    display: flex;
    background-color: #fff;
    border-radius: 30rpx;
    margin-top: 20rpx;
}

.shop-item:first-child{
    margin-top: 0;
}

.shop-img {
    width: 150rpx;
    height: 150rpx;
    border: 1px solid rgba(0, 0, 0, .12);
    flex-shrink: 0;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 30rpx 0 20rpx 20rpx;
}

.shop-img image {
    width: 100%;
    display: block;
}

.shop-name {
    margin-left: 30rpx;
    font-size: 36rpx;
    font-weight: 700;
}

.shop-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 10rpx 20rpx 20rpx 0;
}

.shop-desc {
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #999;
}

.shop-desc view {
    margin-top: 10rpx;
}

.shop-desc view:first-child {
    margin-top: 0;
}

.shop-rank {
    font-size: 32rpx;
    font-weight: bold;
    color: #ed6d2d;
}

.shop-sales {
    position: relative;
}

.shop-sales text {
    margin-left: 15rpx;
}

.shop-sales text:first-child {
    margin-left: 0;
}

.shop-distance {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}

.shop-freight text{
    margin-left: 20rpx;
}

.shop-freight text:first-child{
    margin-left: 0;
}

.shop-coupon{
    color: #ee705b;
}

.coupon-item{
    border: 1px solid #f7cbc3;
    border-radius: 15rpx;
    padding: 2rpx 10rpx;
}
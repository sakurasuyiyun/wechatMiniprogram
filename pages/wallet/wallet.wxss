.wallet{
    padding: 16rpx 32rpx;
}

.wallet-content{
    width: 100%;
}

.wallet-item{
    display: flex;
    justify-content: space-between;
    text-align: center;
    background-color: darkgreen;
    position: relative;
    border-radius: 30rpx 30rpx 0 0;
}

.grap{
    position: absolute;
    width: 2rpx;
    height: 55%;
    border-right: 2rpx solid white;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.wallet-left,.wallet-right{
    width: 45%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: 24rpx;
}

.wallet-right text{
    margin-bottom: 10rpx;
}

.money{
    font-weight: 700;
    font-size: 36rpx;
}

.input-content{
    padding: 16rpx 32rpx;
}

.input-item{
    width: 100%;
    display: flex;
    position: relative;
    justify-content: space-between;
    align-items: center;
    text-align: center;
}

.left,.right{
    width: 45%;
    padding: 20rpx 0;
}

.grap.input{
    border-color: black;
}

.input-list{
    border-bottom: 2rpx solid #ccc;
    width: 80%;
    margin: 0 auto;
    margin-top: 30rpx;
}

.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.4);
    z-index: 9999;
}

.loading{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.text{
    color: white;
}